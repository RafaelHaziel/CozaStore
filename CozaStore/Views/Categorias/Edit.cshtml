@model CozaStore.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Categoria</h1>

<h4>Alterar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NovaFoto" class="control-label"></label>
                <input asp-for="NovaFoto" class="form-control" />
                <span asp-validation-for="NovaFoto" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Filtrar" /> @Html.DisplayNameFor(model => model.Filtrar)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Banner" /> @Html.DisplayNameFor(model => model.Banner)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaPaiId" class="control-label"></label>
                <select asp-for="CategoriaPaiId" class="form-control" asp-items="ViewBag.CategoriaPaiId"></select>
                <span asp-validation-for="CategoriaPaiId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NovaFoto" class="control-label"></label>
                <img id="Preview" class="img-fluid w-100" />
                <input type="file" asp-for="NovaFoto" class="form-control" accept=".jpg,.jpeg,.png,.gif,.jfif" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
