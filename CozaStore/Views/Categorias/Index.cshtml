@model IEnumerable<Cozastore.Models.Categoria>
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-primary border-radius-lg pt-4 pb-3 d-flex align-items-center justify-content-between">
                    <h6 class="text-white text-capitalize ps-3">Categorias</h6>
                    <a class="text-white text-capitalize ps-3 d-flex align-items-center me-4" asp-action="Create">
                        <i class="material-icons opacity-10 me-2">add</i> Adicionar
                    </a>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center justify-content-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Nome
                                </th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    Categoria Pai
                                </th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    Filtro
                                </th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    Banner
                                </th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-dark text-sm ps-4">
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </td>
                                    <td class="text-dark text-sm ps-4">
                                        @Html.DisplayFor(modelItem => item.CategoriaPai.Nome)
                                    </td>
                                    <td class="text-dark text-sm ps-4">
                                        @(item.Filtrar ? "Sim" : "Não")
                                    </td>
                                    <td class="text-dark text-sm ps-4">
                                        @(item.Banner ? "Sim" : "Não")
                                    </td>
                                    <td class="text-dark text-sm ps-4">
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
